<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<GridPane stylesheets="@/styles/MainMenu.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.MainMenu.MainMenuController">
   <children>
      <VBox GridPane.rowIndex="0" GridPane.columnIndex="1" alignment="CENTER">
         <!--<Label styleClass="title" alignment="CENTER" text="Q-BITZ" textFill="WHITE"/>-->
         <ImageView>
            <Image url="@/Title.png"></Image>
         </ImageView>
         <padding>
            <Insets top="50.0" />
         </padding>
      </VBox>
      <VBox alignment="CENTER" spacing="20" GridPane.rowIndex="1" GridPane.columnIndex="1">
         <Button id="multiplayerButton" onAction="#gotoLogin" text="Multiplayer"/>
         <Button id="singleplayerButton" onAction="#gotoSingleplayerMenu" text="Singleplayer"/>
         <Button id="howtoplayButton" text="How To Play"/>
         <Button id="optionsButton" text="Options"/>
         <padding>
            <Insets left="30.0" right="30.0" />
         </padding>
      </VBox>
   </children>
   <columnConstraints>
      <ColumnConstraints percentWidth="20.0" />
      <ColumnConstraints percentWidth="60.0" />
      <ColumnConstraints percentWidth="20.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints percentHeight="30.0"/>
      <RowConstraints percentHeight="70.0"/>
   </rowConstraints>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="30.0" />
   </padding>
</GridPane>
