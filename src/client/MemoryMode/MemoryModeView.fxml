<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vBoxMemory" spacing="40" stylesheets="@/styles/GameInstance.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.GameInstance.MemoryMode">
    <HBox alignment="CENTER" spacing="100">
        <Label fx:id="timerLabelMemory" alignment="CENTER" text="Q-BITZ" HBox.hgrow="ALWAYS" />
        <!--<Label HBox.hgrow="ALWAYS" fx:id="winText" alignment="CENTER" text=""/>-->
    </HBox>
    <HBox alignment="CENTER">
        <Button fx:id="startButton" onAction="#startShowPattern" text="Start" />
    </HBox>
    <!--Space-->
    <Region prefHeight="10" />
    <!--Space-->
    <HBox fx:id="sceneHboxMemory" />
    <HBox alignment="CENTER">
        <Button fx:id="submitButtonMemory" onAction="#startShowPattern" text="Submit" HBox.hgrow="ALWAYS" />
    </HBox>
    <padding>
        <Insets bottom="50.0" left="10.0" right="10.0" top="60.0" />
    </padding>
</VBox>
