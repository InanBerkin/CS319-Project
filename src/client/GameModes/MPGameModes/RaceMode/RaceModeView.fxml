<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<VBox fx:id="vBox" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="client.GameModes.MPGameModes.RaceMode.RaceModeController"
      stylesheets="@/styles/GameInstance.css"
        spacing="40">
        <HBox alignment="CENTER" spacing="100">
            <Label HBox.hgrow="ALWAYS" fx:id="timerLabel"  alignment="CENTER" text="Q-BITZ"/>
            <!--<Label HBox.hgrow="ALWAYS" fx:id="winText" alignment="CENTER" text=""/>-->
        </HBox>
        <!--Space-->
        <Region prefHeight="10"/>
        <!--Space-->
        <HBox fx:id="sceneHbox"/>
        <HBox alignment="CENTER">
            <Button HBox.hgrow="ALWAYS" fx:id="submitButton" text="Submit" onAction="#submit"/>
        </HBox>
        <HBox fx:id="playersBar" alignment="CENTER">

        </HBox>
    <padding>
        <Insets bottom="50.0" left="10.0" right="10.0" top="60.0" />
    </padding>
</VBox>