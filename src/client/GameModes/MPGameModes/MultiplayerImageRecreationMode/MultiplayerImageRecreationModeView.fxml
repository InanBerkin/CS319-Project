<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<VBox id="main" fx:id="vBox" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="client.GameModes.MPGameModes.MultiplayerImageRecreationMode.MultiplayerImageRecreationModeController"
      stylesheets="@/styles/GameInstance.css"
      spacing="20">
    <HBox alignment="CENTER" spacing="100">
        <Label HBox.hgrow="ALWAYS" fx:id="timerLabel"  alignment="CENTER" text="Q-BITZ"/>
        <!--<Label HBox.hgrow="ALWAYS" fx:id="winText" alignment="CENTER" text=""/>-->
    </HBox>
    <!--Space-->
    <Region prefHeight="10"/>
    <!--Space-->
    <VBox spacing="20">
        <HBox fx:id="labelHbox"/>
        <HBox fx:id="sceneHbox"/>
    </VBox>
    <HBox alignment="CENTER">
        <Button HBox.hgrow="ALWAYS" fx:id="submitButton" text="Submit" onAction="#submit"/>
    </HBox>
    <HBox fx:id="playersBar" alignment="CENTER_LEFT" spacing="20">
        <padding>
            <Insets left="30.0" right="30.0"/>
        </padding>
    </HBox>
    <padding>
        <Insets bottom="50.0" left="10.0" right="10.0" top="60.0" />
    </padding>
</VBox>